{
	"name": "Hugo (Community)",
	"build": {
		"dockerfile": "Dockerfile",
		"args": {
			"VARIANT": "hugo_extended",
			"VERSION": "latest",
			"NODE_VERSION": "14"
		}
	},

	"customizations": {
		"vscode": {
			"settings": { 
				"html.format.templating": true
			},
			
			"extensions": [
				"GitHub.copilot",
				"tamasfe.even-better-toml",
				"davidanson.vscode-markdownlint"
			]
		}
	},

	"forwardPorts": [
		1313
	],

	"remoteUser": "node",
	"features": {
		"ghcr.io/devcontainers/features/go:1": {}
	}
}
